<Window x:Class="gApp2.NewPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Person" 
        PreviewKeyDown="CloseOnEscape"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
        
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="25">
            <Label Content="Name"/>
            <TextBox Name="name" Width="80" BorderBrush="Black" TextChanged="contentCheck"/>
            <Button Name ="done" Margin="1,0,0,0" IsDefault="True" Content="Done" Width="50" Click="click_done" IsEnabled="False" />
        </StackPanel>
    </Grid>
</Window>
